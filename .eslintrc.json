{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb",
        "eslint:recommended",
        "react-app",
        "prettier"
    ],
    "plugins": [],
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                    ".js",
                    ".jsx",
                    ".ts",
                    ".tsx"
                ]
            }
        }
    },
    "rules": {
        "radix": [
            "error",
            "as-needed"
        ],
        "indent": [
            "error",
            2,
            {
                "ignoredNodes": [
                    "TemplateLiteral > *"
                    /* "ArrowFunctionExpression > ArrowFunctionExpression", */
                ],
                "SwitchCase": 1
            }
        ],
        "max-len": [
            "error",
            {
                "code": 120,
                "ignoreTemplateLiterals": true,
                "ignoreStrings": true
            }
        ],
        "no-trailing-spaces": [
            "error",
            {
                "skipBlankLines": true
            }
        ],
        "import/prefer-default-export": "off",
        "no-irregular-whitespace": "error",
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": [
            "error"
        ],
        "no-shadow": "off",
        "@typescript-eslint/no-shadow": [
            "error"
        ],
        "quotes": [
            2,
            "single",
            "avoid-escape"
        ],
        "no-empty-function": [
            "error",
            {
                "allow": [
                    "constructors"
                ]
            }
        ],
        "react/react-in-jsx-scope": "off",
        "camelcase": "error",
        "spaced-comment": "error",
        "no-duplicate-imports": "error",
        "react/jsx-no-useless-fragment": [
            2,
            {
                "allowExpressions": true
            }
        ],
        "no-underscore-dangle": [
            "error",
            {
                "allowAfterThis": true
            }
        ],
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "never",
                "jsx": "never",
                "ts": "never",
                "tsx": "never"
            }
        ],
        "react/jsx-filename-extension": [
            "error",
            {
                "extensions": [
                    ".jsx",
                    ".tsx"
                ]
            }
        ],
        "react/function-component-definition": [
            "error",
            {
                "namedComponents": [
                    "function-declaration",
                    "arrow-function"
                ],
                "unnamedComponents": "arrow-function"
            }
        ],
        "react/no-unstable-nested-components": [
            "error",
            {
                "allowAsProps": true
            }
        ]
    }
}